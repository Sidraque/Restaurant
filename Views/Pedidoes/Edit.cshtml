@model LanchoneteCore.Models.Pedido

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar pedido</h2>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PedidoID" />
            <input type="hidden" asp-for="Data" />
            <input type="hidden" asp-for="Hora" />
            <input type="hidden" asp-for="ValorAtual" />
            <input type="hidden" asp-for="ClienteID" />

            

            <div class="form-group">
                <label asp-for="Statusp" class="control-label"></label>
                <input asp-for="Statusp" class="form-control" />
                <span asp-validation-for="Statusp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AtendenteID" class="control-label"></label>
                <select asp-for="AtendenteID" class="form-control" asp-items="ViewBag.AtendenteID"></select>
                <span asp-validation-for="AtendenteID" class="text-danger"></span>
            </div>
           

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar à lista</a>
</div>

